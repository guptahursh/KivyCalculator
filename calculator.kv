<Keys>:
    background_normal:''
    background_color: 0.12,0.13,0.20,1,
    color: 0.27,0.29,0.44,1,
    font_size:40
    on_press:
        self.background_color = (0,0,0,1)
        self.button_pressed()
    on_state:
        self.background_color= 0.12,0.13,0.20,1,

    
<MainCal>:
    cols : 1 
    rows : 2
    canvas.before:
        Color:
            rgba: 00.09,0.09,0.13,1
        Rectangle:
            pos: self.pos
            size: self.size
    display: display_id
    # for the main display
    MainInput: # its a scroll
        canvas.before:
            Color:
                rgba: 00.09,0.59,0.53,1
            Rectangle:
                pos: self.pos
                size: self.size
        id: display_id
        size_hint_y: None
        size:
        id:display_id

    # for numeric keypad
    GridLayout:
        pos_hint:{'bottom':0,'x':0}
        size_hint:(1,0.45)
        padding_hint: 0.02
        rows:4
        cols:5

